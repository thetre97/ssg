{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "module": "esnext",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "types": ["@peeky/test"],
    "resolveJsonModule": true,
    "paths": {
      "types/*": ["types/*"]
    }
  },
  "include": ["src", "types", "renderer", "ssg.js", "vite.config.js"]
}
